<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/riddle_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/joke_card"
        card_view:cardBackgroundColor="@color/material_amber"
        card_view:cardCornerRadius="8dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/riddle_icon"
                android:layout_width="@dimen/brain_riddle_icon"
                android:layout_height="@dimen/brain_riddle_icon"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_brain_riddle_question" />

            <TextView
                android:id="@+id/one_riddle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/riddle_icon"
                android:text="目前你最后悔的是什么？好奇，学会了网购。有最最后悔的事吗？显摆，教会了老婆"
                android:padding="10dp" />
            <Button
                android:id="@+id/riddle_more"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more"
                android:textColor="@color/colorAccent"
                android:layout_below="@id/one_riddle" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/joke_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        card_view:cardBackgroundColor="@color/material_light_blue"
        card_view:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/joke_icon"
                android:layout_width="@dimen/brain_riddle_answer_icon"
                android:layout_height="@dimen/brain_riddle_answer_icon"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_joke_detail" />

            <TextView
                android:id="@+id/one_joke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/joke_icon"
                android:padding="10dp"
                android:text="目前你最后悔的是什么？好奇，学会了网购。有最最后悔的事吗？显摆，教会了老婆" />

            <Button
                android:id="@+id/joke_more"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/one_joke"
                android:text="@string/more"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>